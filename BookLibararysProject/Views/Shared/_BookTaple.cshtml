@model IEnumerable<Book>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            @*  <th>
            @Html.DisplayNameFor(model => model.ISBN)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.CoverPhoto)
            </th>
            @* <th>
            @Html.DisplayNameFor(model => model.IsOfTheMonth)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.Price)
                </td>
                <td class="w-25">
                    <img src="@Url.Content(item.CoverPhoto)" alt="Product Image" class="img-thumbnail w-25" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @* <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | *@
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">More details</a> @* | *@
                    @* <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>
